<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prodev.adminapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Admin Page"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Login_1"
            android:screenOrientation="portrait" />
        <activity
            android:name=".admin_login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".client_login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Splash_screen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main2Activity"
            android:label="Client page"
            android:screenOrientation="portrait" />
        <activity android:name=".client_signup"
            android:label="Registration for client"
            android:screenOrientation="portrait" />
        <activity android:name=".pdf_view"
            android:label="Pdf Opener"
            android:screenOrientation="portrait" >

        </activity>
        <activity android:name=".info_by_admin"
            android:label="Information"
            android:screenOrientation="portrait" >

        </activity>
    </application>

</manifest>